<%@ taglib prefix="c" uri="http://java.sun.com/jsp/jstl/core"%>
<%@ taglib prefix="fmt" uri="http://java.sun.com/jsp/jstl/fmt"%>
<%@ taglib prefix="spring" uri="http://www.springframework.org/tags"%>
<%@ taglib prefix="form" uri="http://www.springframework.org/tags/form"%>
<%@ taglib prefix="jem" uri="http://javaetmoi.com/core/spring-mvc"%>
<jsp:directive.page contentType="text/html;charset=ISO-8859-15" />

<html xmlns:jsp="http://java.sun.com/JSP/Page">
<head>
<title>HTML 5 Validation page</title>
<style type="text/css">
input:invalid,input:focus:invalid {
	background-image:
		url(data:image/png;base64,);
	background-position: right top;
	background-repeat: no-repeat;
	-moz-box-shadow: none;
}

input:valid {
	background-image:
		url(data:image/png;base64,);
	background-position: right top;
	background-repeat: no-repeat;
}
</style>
</head>
<body>
	<form:form modelAttribute="customer">
		<form:errors path="*" />
		<div>
			<label class="control-label">First Name</label>
			<jem:input path="firstName" />
		</div>
		<div>
            <label class="control-label">Last Name</label>
            <jem:input path="lastName" />
        </div>
        <div>
            <label class="control-label">Address</label>
            <jem:input path="address" />
        </div>
        <div>
            <label class="control-label">City</label>
            <jem:input path="city" />
        </div>
        <div>
            <label class="control-label">Telephone</label>
            <jem:input path="telephone" />
        </div>
        <div>
            <label class="control-label">Email</label>
            <jem:input path="email" />
        </div>
        <div>
            <label class="control-label">Website URL</label>
            <jem:input path="website" />
        </div>
        <div>
            <label class="control-label">Age</label>
            <jem:input path="age" />
        </div>        
		<br />
		<div class="form-actions">
			<button type="submit">Add Customer</button>
		</div>

	</form:form>
</body>
</html>
